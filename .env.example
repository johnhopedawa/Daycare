# Database
DATABASE_URL=postgresql://daycare:daycare@localhost:5432/daycare

# JWT Secret (change in production!)
JWT_SECRET=your-secret-key-change-this-in-production

# App URLs
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Node Environment
NODE_ENV=development

# Postgres (for docker-compose)
POSTGRES_USER=daycare
POSTGRES_PASSWORD=daycare
POSTGRES_DB=daycare

# ========================================
# SimpleFIN Bridge + Firefly III
# ========================================

# Encryption key for SimpleFIN Access URLs (REQUIRED)
# Generate with: openssl rand -hex 32
# IMPORTANT: Must be 64 hex characters (32 bytes). DO NOT CHANGE after first use!
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Firefly III configuration
# APP_KEY: Generate with: openssl rand -base64 32
# IMPORTANT: Must be exactly 32 characters. Change before first Firefly deployment!
FIREFLY_APP_KEY=SomeRandomStringOf32Characters

# Firefly III service PAT (Personal Access Token)
# Generate in Firefly UI: Options → Profile → OAuth → Personal Access Tokens
# This is used by backend to connect to Firefly III API
FIREFLY_SERVICE_PAT=your-firefly-personal-access-token-here

# Firefly III base URL (internal service)
FIREFLY_BASE_URL=http://firefly:8080

# Admin email for Firefly III
ADMIN_EMAIL=admin@example.com

# Timezone for daily SimpleFIN sync (cron: 0 2 * * *)
# Examples: UTC, America/Toronto, America/New_York, America/Los_Angeles
# Default: UTC (recommended for production)
SYNC_TIMEZONE=UTC
